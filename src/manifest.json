{
    "manifest_version": 3,
    "name": "By 187",
    "version": "1.0",
    "description": "https://t.me/gstar_private_bot?start=start_refl00kJvmmqMpX",
    "permissions": ["tabs", "storage", "scripting"],
    "host_permissions": ["*://*.facebook.com/*", "*://*.facebook.net/*"],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/marketplace*", "*://*.facebook.com/*/marketplace*"],
            "js": ["content/content.js"]
        }
    ]
}
